                  <Cursor fx:constant="DEFAULT" />
               </cursor>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Label fx:id="playerNameLabel" alignment="CENTER" prefHeight="51.0" prefWidth="247.0" text="Player One" textFill="#fcfcfc">
               <font>
                  <Font name="System Bold" size="29.0" />
               </font>
            </Label>
            <Label alignment="CENTER" prefHeight="35.0" prefWidth="324.0" text="Turn" textFill="#fffefe">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <Region VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
    </children>
</GridPane>
